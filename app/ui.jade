  div#component_sidebar

    ul.vertical.menu(data-accordion-menu, data-multi-open="false")
      li
        a(href='#') Components
        ul#component_list.is-active.menu.vertical.nested
      li
        a(href='#') Item 2
        ul.menu.vertical.nested
          li
            a(href='#') Item 1A
